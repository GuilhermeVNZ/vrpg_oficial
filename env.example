# VRPG Client - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
RUST_LOG=info
VRPG_PROFILE=development

# =============================================================================
# PATHS AND DIRECTORIES
# =============================================================================
VRPG_CONFIG_DIR=./config
VRPG_ASSETS_DIR=./assets
VRPG_LOGS_DIR=./logs
VRPG_DATA_DIR=./data
VRPG_MODELS_DIR=./assets-and-models/models

# =============================================================================
# EXTERNAL APIs (FALLBACK ONLY)
# =============================================================================
# OpenAI (for LLM fallback when local model fails)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=org-your-org-id-here

# Anthropic Claude (alternative LLM fallback)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI (for additional services)
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# TRANSMUTATION DOCUMENT CONVERSION
# =============================================================================
# Document conversion settings
VRPG_TRANSMUTATION_ENABLED=true
VRPG_TRANSMUTATION_OPTIMIZE_LLM=true
VRPG_TRANSMUTATION_MAX_CHUNK_SIZE=512
VRPG_TRANSMUTATION_PARALLEL_JOBS=4

# OCR settings
VRPG_TRANSMUTATION_OCR_ENABLED=true
VRPG_TRANSMUTATION_OCR_LANGUAGE=eng
VRPG_TRANSMUTATION_OCR_DPI=300

# Audio transcription
VRPG_TRANSMUTATION_AUDIO_ENABLED=true
VRPG_TRANSMUTATION_WHISPER_MODEL=base

# File size limits
VRPG_TRANSMUTATION_MAX_FILE_SIZE_MB=100
VRPG_TRANSMUTATION_TIMEOUT_SECONDS=300

# =============================================================================
# MCP SERVICES CONFIGURATION
# =============================================================================
# Synap - Multi-model conversation orchestration
SYNAP_ENDPOINT=http://localhost:8001
SYNAP_API_KEY=synap_your-api-key-here
SYNAP_TIMEOUT=15000

# Classify - Intelligent text classification
CLASSIFY_ENDPOINT=http://localhost:8003
CLASSIFY_API_KEY=classify_your-api-key-here
CLASSIFY_TIMEOUT=5000

# Nexus - Query enhancement and expansion
NEXUS_ENDPOINT=http://localhost:8004
NEXUS_API_KEY=nexus_your-api-key-here
NEXUS_TIMEOUT=3000

# Lexus - Semantic processing and understanding
LEXUS_ENDPOINT=http://localhost:8005
LEXUS_API_KEY=lexus_your-api-key-here
LEXUS_TIMEOUT=5000

# Vectorizer - Vector search and similarity
VECTORIZER_ENDPOINT=http://localhost:8002
VECTORIZER_API_KEY=vectorizer_your-api-key-here
VECTORIZER_TIMEOUT=8000

# =============================================================================
# PERFORMANCE AND RESOURCE LIMITS
# =============================================================================
# Memory limits (in MB)
VRPG_MAX_MEMORY_MB=8192
VRPG_LLM_MAX_MEMORY_MB=6144
VRPG_ASR_MAX_MEMORY_MB=1024
VRPG_TTS_MAX_MEMORY_MB=512

# CPU limits (percentage)
VRPG_MAX_CPU_PERCENT=80
VRPG_LLM_MAX_CPU_PERCENT=70
VRPG_SERVICES_MAX_CPU_PERCENT=60

# Threading
VRPG_THREAD_COUNT=8
VRPG_LLM_THREADS=6
VRPG_WORKER_THREADS=4

# GPU Configuration - ESSENCIAL para < 1.5s de latência
VRPG_GPU_ENABLED=true
VRPG_GPU_LAYERS=35
VRPG_GPU_MEMORY_MB=4096

# GPU por serviço
VRPG_TTS_USE_GPU=true
VRPG_ASR_USE_GPU=true
VRPG_LLM_USE_GPU=true
VRPG_SOVITS_USE_GPU=true

# =============================================================================
# SECURITY AND ENCRYPTION
# =============================================================================
# Enable security features
VRPG_ENABLE_AUDIT=true
VRPG_ENABLE_ENCRYPTION=true
VRPG_ENABLE_IPC_VALIDATION=true

# Secret keys (generate new ones for production)
VRPG_SECRET_KEY=your-secret-key-here-change-in-production
VRPG_ENCRYPTION_KEY=your-encryption-key-here-32-chars-min
VRPG_JWT_SECRET=your-jwt-secret-here-for-internal-auth

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================
# Debug modes
VRPG_DEBUG_MODE=false
VRPG_VERBOSE_LOGGING=false
VRPG_PROFILE_PERFORMANCE=false
VRPG_ENABLE_DEVTOOLS=true

# Testing
VRPG_TEST_MODE=false
VRPG_MOCK_SERVICES=false
VRPG_SKIP_MODEL_LOADING=false

# Hot reload
VRPG_HOT_RELOAD=true
VRPG_WATCH_CONFIG=true

# =============================================================================
# NETWORKING AND PORTS
# =============================================================================
# Service ports (ensure no conflicts)
VRPG_LLM_PORT=7002
VRPG_ASR_PORT=7001
VRPG_TTS_PORT=7003
VRPG_RULES_PORT=7004
VRPG_MEMORY_PORT=7005
VRPG_GAME_ENGINE_PORT=7006

# Client ports
VRPG_CLIENT_PORT=3000
VRPG_DEV_SERVER_PORT=5173

# Health check
VRPG_HEALTH_CHECK_INTERVAL=30
VRPG_HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# AUDIO CONFIGURATION
# =============================================================================
# Audio devices
VRPG_AUDIO_INPUT_DEVICE=default
VRPG_AUDIO_OUTPUT_DEVICE=default

# Audio quality
VRPG_AUDIO_SAMPLE_RATE=48000
VRPG_AUDIO_CHANNELS=1
VRPG_AUDIO_BUFFER_SIZE=1024

# Voice processing
VRPG_VAD_THRESHOLD=0.5
VRPG_NOISE_SUPPRESSION=true
VRPG_ECHO_CANCELLATION=true

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Model download
VRPG_AUTO_DOWNLOAD_MODELS=true
VRPG_MODEL_CACHE_DIR=./cache/models
VRPG_MODEL_VERIFY_CHECKSUMS=true

# Model URLs (for auto-download)
VRPG_LLM_MODEL_URL=https://huggingface.co/Qwen/Qwen2.5-14B-Instruct-GGUF/resolve/main/qwen2.5-14b-instruct-q4_k_m.gguf
VRPG_ASR_MODEL_URL=https://huggingface.co/ggerganov/whisper.cpp/resolve/main/ggml-large-v3.bin
VRPG_TTS_MODEL_URL=https://huggingface.co/coqui/XTTS-v2/resolve/main/model.pth

# =============================================================================
# ANALYTICS AND TELEMETRY
# =============================================================================
# Usage analytics (optional)
VRPG_ANALYTICS_ENABLED=false
VRPG_ANALYTICS_ENDPOINT=https://analytics.vrpg-client.com
VRPG_ANALYTICS_API_KEY=your-analytics-key-here

# Crash reporting
VRPG_CRASH_REPORTING=true
VRPG_CRASH_ENDPOINT=https://crash-reports.vrpg-client.com

# Update checking
VRPG_AUTO_UPDATE=true
VRPG_UPDATE_ENDPOINT=https://updates.vrpg-client.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VRPG_FEATURE_MCP_INTEGRATION=true
VRPG_FEATURE_VOICE_CLONING=true
VRPG_FEATURE_ADVANCED_GRAPHICS=true
VRPG_FEATURE_MULTIPLAYER=false
VRPG_FEATURE_CLOUD_SYNC=false

# Experimental features
VRPG_EXPERIMENTAL_GPU_ACCELERATION=true
VRPG_EXPERIMENTAL_STREAMING_LLM=false
VRPG_EXPERIMENTAL_REAL_TIME_VOICE=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log levels: error, warn, info, debug, trace
VRPG_LOG_LEVEL=info
VRPG_LOG_FORMAT=json
VRPG_LOG_TO_FILE=true
VRPG_LOG_TO_CONSOLE=true

# Log rotation
VRPG_LOG_MAX_SIZE=100MB
VRPG_LOG_MAX_FILES=10
VRPG_LOG_ROTATION=daily

# Module-specific logging
RUST_LOG=vrpg_client=info,llm_core=debug,asr_service=info,tts_service=info,rules5e_service=warn,memory_service=info,game_engine=debug

# =============================================================================
# PLATFORM-SPECIFIC SETTINGS
# =============================================================================
# Windows
VRPG_WIN_ENABLE_HARDWARE_ACCELERATION=true
VRPG_WIN_USE_ANGLE=false

# macOS
VRPG_MAC_ENABLE_METAL=true
VRPG_MAC_USE_DISCRETE_GPU=true

# Linux
VRPG_LINUX_USE_WAYLAND=auto
VRPG_LINUX_ENABLE_VULKAN=true

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env files to version control
# 2. Generate strong, unique keys for production
# 3. Adjust memory/CPU limits based on your hardware
# 4. MCP services are optional but recommended for full functionality
# 5. External API keys are only used as fallbacks when local services fail
